---
import { Image } from 'astro:assets';
import instagramWhite from '../images/instagram-white.svg';
import instagramBlack from '../images/instagram-black.svg';
import facebookWhite from '../images/facebook-white.svg';
import facebookBlack from '../images/facebook-black.svg';

// Navigation links array
const navLinks = [
  { href: '#guide', text: 'Путеводитель' },
  { href: '#aktau', text: 'Актау' },
  { href: '#mangistau', text: 'Мангистау' },
  { href: '#gastronomy', text: 'Гастрономия' },
];

// Social media links array
const socialLinks = [
  {
    href: 'https://www.instagram.com/tourism_mangystau?igsh=ZGY1NzcxdXJycjZ3',
    icon: instagramWhite,
    mobIcon: instagramBlack,
    alt: 'Instagram',
    label: 'Наш инстаграм',
  },
  {
    href: 'https://www.facebook.com/people/Mangystau-Tourism-Basqarmasy/100079939274650/?ref=ig_profile_ac',
    icon: facebookWhite,
    mobIcon: facebookBlack,
    alt: 'Facebook',
    label: 'Наш facebook',
  },
];
---

<header
  id="main-header-outer"
  class="w-full fixed left-1/2 transform -translate-x-1/2 mx-auto z-50 transition-all duration-300 bg-transparent"
>
  <div
    id="main-header"
    class="border-2 border-white rounded-full max-w-5xl h-16 mx-3 lg:mx-auto my-3"
  >
    <nav class="flex items-center justify-between py-3 px-8">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="block">
          <img src="/placeholder.jpg" alt="Visit Aktau" class="h-10" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center justify-center space-x-12 lg:space-x-20">
        {
          navLinks.map(link => (
            <a
              href={link.href}
              class="text-white hover:text-gray-200 transition-colors text-lg font-medium"
            >
              {link.text}
            </a>
          ))
        }
      </div>

      <!-- Social Icons - Desktop -->
      <div class="hidden md:flex items-center gap-3">
        {
          socialLinks.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-gray-200 transition-colors"
            >
              <Image src={social.icon} alt={social.alt} class="w-8 h-8" />
            </a>
          ))
        }
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white focus:outline-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>
</header>

<!-- Mobile Menu -->
<div
  id="mobile-menu"
  class="fixed top-0 right-0 w-64 bg-white h-full transform translate-x-full transition-transform duration-300 ease-in-out z-50"
>
  <div class="p-5">
    <button id="close-menu-button" class="text-black focus:outline-none absolute top-4 right-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="mt-10 flex flex-col space-y-6">
      {
        navLinks.map(link => (
          <a href={link.href} class="text-black hover:text-black/80 transition-colors">
            {link.text}
          </a>
        ))
      }

      <div class="pt-6 border-t border-gray-600">
        {
          socialLinks.map(social => (
            <a
              href={social.href}
              class="flex items-center text-black hover:text-black/80 transition-colors mb-4"
            >
              <Image src={social.mobIcon} alt={social.alt} class="w-6 h-6 mr-3" />
              {social.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>

<script>
  // Header scroll effect
  const header = document.getElementById('main-header-outer');
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeMenuButton = document.getElementById('close-menu-button');

  // Check if elements exist before using them
  if (header) {
    // Initial state - transparent background
    header.classList.add('bg-transparent');

    // Scroll event to add blur effect
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header.classList.remove('bg-transparent');
        header.classList.add('backdrop-blur-sm');
      } else {
        header.classList.add('bg-transparent');
        header.classList.remove('backdrop-blur-sm');
      }
    });
  }

  // Mobile menu toggle
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-full');
      mobileMenu.classList.add('translate-x-0');
    });
  }

  if (closeMenuButton && mobileMenu) {
    closeMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-0');
      mobileMenu.classList.add('translate-x-full');
    });
  }

  // Close mobile menu when clicking on a link
  if (mobileMenu) {
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('translate-x-0');
        mobileMenu.classList.add('translate-x-full');
      });
    });
  }
</script>
