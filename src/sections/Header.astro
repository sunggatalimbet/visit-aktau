---
import { Image } from 'astro:assets';
import instagramWhite from '../images/instagram-white.svg';
import instagramBlack from '../images/instagram-black.svg';
import facebookWhite from '../images/facebook-white.svg';
import facebookBlack from '../images/facebook-black.svg';

// Navigation links array
const navLinks = [
  { href: '#guide', text: 'Путеводитель' },
  { href: '#aktau', text: 'Актау' },
  { href: '#mangistau', text: 'Мангистау' },
  { href: '#gastronomy', text: 'Гастрономия' },
];

// Social media links array
const socialLinks = [
  {
    href: 'https://www.instagram.com/tourism_mangystau?igsh=ZGY1NzcxdXJycjZ3',
    icon: instagramWhite,
    mobIcon: instagramBlack,
    alt: 'Instagram',
    label: 'Наш инстаграм',
  },
  {
    href: 'https://www.facebook.com/people/Mangystau-Tourism-Basqarmasy/100079939274650/?ref=ig_profile_ac',
    icon: facebookWhite,
    mobIcon: facebookBlack,
    alt: 'Facebook',
    label: 'Наш facebook',
  },
];
---

<header
  id="main-header-outer"
  class="fixed left-1/2 z-50 mx-auto w-full -translate-x-1/2 transform bg-transparent transition-all duration-300"
>
  <div
    id="main-header"
    class="mx-3 my-3 h-16 max-w-5xl rounded-full border-2 border-white lg:mx-auto"
  >
    <nav class="flex items-center justify-between px-8 py-3">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="block">
          <img src="/placeholder.jpg" alt="Visit Aktau" class="h-10" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden items-center justify-center space-x-12 md:flex lg:space-x-20">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-lg font-medium text-white transition-colors hover:text-gray-200"
            >
              {link.text}
            </a>
          ))
        }
      </div>

      <!-- Social Icons - Desktop -->
      <div class="hidden items-center gap-3 md:flex">
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white transition-colors hover:text-gray-200"
            >
              <Image src={social.icon} alt={social.alt} class="h-8 w-8" />
            </a>
          ))
        }
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="text-white focus:outline-none md:hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>
</header>

<!-- Mobile Menu -->
<div
  id="mobile-menu"
  class="fixed top-0 right-0 z-50 h-full w-64 translate-x-full transform bg-white transition-transform duration-300 ease-in-out"
>
  <div class="p-5">
    <button id="close-menu-button" class="absolute top-4 right-4 text-black focus:outline-none">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="mt-10 flex flex-col space-y-6">
      {
        navLinks.map((link) => (
          <a href={link.href} class="text-black transition-colors hover:text-black/80">
            {link.text}
          </a>
        ))
      }

      <div class="border-t border-gray-600 pt-6">
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              class="mb-4 flex items-center text-black transition-colors hover:text-black/80"
            >
              <Image src={social.mobIcon} alt={social.alt} class="mr-3 h-6 w-6" />
              {social.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>

<script>
  // Header scroll effect
  const header = document.getElementById('main-header-outer');
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeMenuButton = document.getElementById('close-menu-button');

  // Check if elements exist before using them
  if (header) {
    // Initial state - transparent background
    header.classList.add('bg-transparent');

    // Scroll event to add blur effect
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header.classList.remove('bg-transparent');
        header.classList.add('backdrop-blur-sm');
      } else {
        header.classList.add('bg-transparent');
        header.classList.remove('backdrop-blur-sm');
      }
    });
  }

  // Mobile menu toggle
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-full');
      mobileMenu.classList.add('translate-x-0');
    });
  }

  if (closeMenuButton && mobileMenu) {
    closeMenuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-0');
      mobileMenu.classList.add('translate-x-full');
    });
  }

  // Close mobile menu when clicking on a link
  if (mobileMenu) {
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach((link) => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('translate-x-0');
        mobileMenu.classList.add('translate-x-full');
      });
    });
  }
</script>
